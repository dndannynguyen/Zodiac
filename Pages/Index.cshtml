@page
@model IndexModel
@{
    ViewData["Title"] = "Zodiac Finder";
}

<div class="text-center" style="padding: 20px;">
    <form method="post" >
        <label for="birthyear"><h1><strong>Birthyear  -->  Zodiac Animal</strong></h1></label>
        <br>
        <input
            style="width: 70%; padding: 5px; margin: 20px; border-radius: 5px;"
            type="number" 
            id="birthyear" 
            name="birthyear" 
            placeholder="Enter your birth year" 
            min="1900" 
            max="2025" 
            required
        >
        <br>
        <input
        type="submit"
        value="Submit"
        style="border-radius: 5px; border-color:black; margin: 5px;">
    </form>

    <div
    style="padding-top: 20px; border-radius: 200px;"
    >
        <img src="@Model.ZodiacImageUrl" alt="" style="width: 300px; height: 300px;">
        <h2>@Model.ZodiacAnimal</h2>
    </div>
</div>
